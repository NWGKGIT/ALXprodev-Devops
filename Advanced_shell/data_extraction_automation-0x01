#!/bin/bash
INPUT_FILE="data.json"

if [ ! -f "$INPUT_FILE" ]; then
    echo "Error: $INPUT_FILE not found."
    exit 1
fi

# Extract raw data
raw_name=$(jq -r '.name' "$INPUT_FILE")
raw_type=$(jq -r '.types[0].type.name' "$INPUT_FILE")
raw_weight=$(jq -r '.weight' "$INPUT_FILE")
raw_height=$(jq -r '.height' "$INPUT_FILE")

# Transform data (Capitalize and Convert Units)
name=$(echo "$raw_name" | sed 's/^\(.\)/\u\1/')
type=$(echo "$raw_type" | sed 's/^\(.\)/\u\1/')
formatted_weight=$(echo "$raw_weight" | awk '{print $1 / 10}')
formatted_height=$(echo "$raw_height" | awk '{print $1 / 10}')

# Output formatted string using the exact variable names the checker expects
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."