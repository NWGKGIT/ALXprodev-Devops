#!/bin/bash
INPUT_FILE="data.json"

if [ ! -f "$INPUT_FILE" ]; then
    echo "Error: $INPUT_FILE not found."
    exit 1
fi

raw_name=$(jq -r '.name' "$INPUT_FILE")
raw_type=$(jq -r '.types[0].type.name' "$INPUT_FILE")
raw_weight=$(jq -r '.weight' "$INPUT_FILE")
raw_height=$(jq -r '.height' "$INPUT_FILE")

name=$(echo "$raw_name" | sed 's/^\(.\)/\u\1/')
type=$(echo "$raw_type" | sed 's/^\(.\)/\u\1/')
weight_kg=$(echo "$raw_weight" | awk '{print $1 / 10}')
height_m=$(echo "$raw_height" | awk '{print $1 / 10}')

echo "$name is of type $type, weighs ${weight_kg}kg, and is ${height_m}m tall."
