#!/bin/bash
INPUT_DIR="pokemon_data"
REPORT_FILE="pokemon_report.csv"

if [ ! -d "$INPUT_DIR" ]; then
    echo "Error: Directory $INPUT_DIR not found."
    exit 1
fi

echo "Name,Height (m),Weight (kg)" > "$REPORT_FILE"

for file in "$INPUT_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/^\(.\)/\u\1/')
    height_raw=$(jq -r '.height' "$file")
    weight_raw=$(jq -r '.weight' "$file")
    height=$(echo "$height_raw" | awk '{print $1 / 10}')
    weight=$(echo "$weight_raw" | awk '{print $1 / 10}')
    echo "$name,$height,$weight" >> "$REPORT_FILE"
done

echo "CSV Report generated at: $REPORT_FILE"
cat "$REPORT_FILE"
echo ""

awk -F',' '
    NR > 1 {
        sum_height += $2;
        sum_weight += $3;
        count++;
    }
    END {
        if (count > 0) {
            printf "Average Height: %.2f m\n", sum_height / count;
            printf "Average Weight: %.2f kg\n", sum_weight / count;
        }
    }
' "$REPORT_FILE"
